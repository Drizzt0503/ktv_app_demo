<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="0" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="103dp"
        android:orientation="vertical">


    </LinearLayout>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="854dp"
        android:layout_height="584dp"
        android:layout_x="213dp"
        android:layout_y="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="127dp"
        android:layout_height="20dp"
        android:layout_x="1152dp"
        android:layout_y="2dp"
        android:text="hi" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="129dp"
        android:layout_height="20dp"
        android:layout_x="1151dp"
        android:layout_y="24dp"
        android:text="123" />

    <LinearLayout
        android:id="@+id/visualizer"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_x="0dp"
        android:layout_y="584dp"
        android:background="@drawable/view_segment"
        android:orientation="vertical">


    </LinearLayout>

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="55dp"
        android:text="pause" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="4dp"
        android:text="start" />
</AbsoluteLayout>
